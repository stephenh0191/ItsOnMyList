<!DOCTYPE html>
<html>

<head>
    <title>ItsOnmylist</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_pack_tag  'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">

</head>

<body>

    <div class="container">
        <% if current_user.present? %>
        <div class="dropdown">
            <li class=current_user>
                <button class="dropbtn">Welcome</button>
                <div class="dropdown-content">
                    <ul>
                        <li class='login'><a href='#'>My Account</a></li>
                        <li class='login'><a href='#'>Settings </a></li>
                        <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
                </div>
            </li>
        </div>
        <% else %>
        <li><%= link_to "Log In", new_user_session_path , class: "btn btn-danger"%></li>
        <% end %>
        </ul>
    </div>
    <nav class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                 <%= link_to "It's on my List", root_path, class:"navbar-brand"  %>
            </div>
    </nav>
    <div class="col-md-10 col-md-offset-3">
        <div class="col-md-2">
            <% if user_signed_in? %>
            <%= link_to "Create To do", new_item_path, class: "btn btn-info" %>
            <% end %>
        </div>
    </div>

    <div class="container">
        <%= yield %>
    </div>
</body>
<%= render 'layouts/footer' %>

</html>